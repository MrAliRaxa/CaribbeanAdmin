<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.AddNewShop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop Name"
                        android:layout_marginBottom="15dp"
                        />
                    <EditText
                        android:id="@+id/newShop_name"

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/round_edit_text"
                        android:inputType="textPersonName"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:id="@+id/newShop_contactNumber"

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/round_edit_text"
                        android:inputType="phone"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop Category"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        />
                    <Spinner
                        android:id="@+id/newShop_category"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/round_edit_text"
                        android:inputType="phone"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardElevation="10dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Shop Logo"
                        android:textSize="18sp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 Image Selected"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/addNewShop_logo_selectedText"
                            />

                        <Button
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="Add Logo Image"
                            android:id="@+id/addNewShop_logo"
                            />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardElevation="10dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Shop Banner"
                        android:textSize="18sp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 Image Selected"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/addNewShop_bannerSelectedText"
                            />

                        <Button
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="Add Banner Image"
                            android:id="@+id/addNewShop_banner"
                            />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/publishShop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="Publish Shop"
                android:textStyle="bold"
                />
        </LinearLayout>
    </ScrollView>
</layout>

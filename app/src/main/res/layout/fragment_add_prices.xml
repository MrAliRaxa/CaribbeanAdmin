<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.shop_management_component.AddPrices"
        android:background="@color/white"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addPrices_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/addNewShowRoomItem"
            />
        <TextView
            android:id="@+id/addPrices_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items not found"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/addNewShowRoomItem"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Add New Item"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
</layout>
